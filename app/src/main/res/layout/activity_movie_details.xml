<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191926"
    tools:context=".MovieDetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:scaleType="centerCrop"
        android:src="@drawable/main_tint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/photo2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:srcCompat="@drawable/rob" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cris"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/photo3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/photo1"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/halk"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/photo4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/photo2"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tor"
        app:layout_constraintBottom_toBottomOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/photo3"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9102736" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:maxWidth="32dp"
        android:text="Robert Downey Jr."
        android:textColor="#D8D8D8"
        android:textSize="12sp"
        android:textStyle="bold"
        android:tooltipText="Robert Downey Jr."
        app:layout_constraintStart_toStartOf="@+id/photo1"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:maxWidth="32dp"
        android:text="Chris Evans"
        android:textColor="#D8D8D8"
        android:textSize="12sp"
        android:textStyle="bold"
        android:tooltipText="Chris Evans"
        app:layout_constraintStart_toStartOf="@+id/photo2"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:maxWidth="32dp"
        android:text="Mark Ruffalo"
        android:textColor="#D8D8D8"
        android:textSize="12sp"
        android:textStyle="bold"
        android:tooltipText="Mark Ruffalo"
        app:layout_constraintStart_toStartOf="@+id/photo3"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:maxWidth="32dp"
        android:text="Chris Hemsworth"
        android:textColor="#D8D8D8"
        android:textSize="12sp"
        android:textStyle="bold"
        android:tooltipText="Chris Hemsworth"
        app:layout_constraintStart_toStartOf="@+id/photo4"
        app:layout_constraintTop_toTopOf="@id/guideline" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:maxWidth="32dp"
        android:text="Cast"
        android:textColor="#D8D8D8"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/photo1"
        app:layout_constraintStart_toStartOf="@+id/photo1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/after_the_d"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginBottom="55dp"
        android:alpha="0.75"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:maxWidth="32dp"
        android:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe."
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/photo1"
        app:layout_constraintEnd_toEndOf="@id/photo4"
        app:layout_constraintStart_toStartOf="@+id/photo1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginBottom="159dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:lineSpacingExtra="4sp"
        android:maxWidth="32dp"
        android:text="Storyline"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/photo1"
        app:layout_constraintEnd_toEndOf="@id/photo4"
        app:layout_constraintStart_toStartOf="@+id/photo1" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:max="5"
        android:progressBackgroundTint="#6D6D80"
        android:progressTint="#FF3365"
        android:rating="4"
        app:layout_constraintBottom_toTopOf="@+id/name"

        app:layout_constraintStart_toStartOf="@+id/photo1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="9dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="125 Reviews"
        android:textColor="#6D6D80"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintStart_toEndOf="@+id/ratingBar" />

    <TextView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Action, Adventure, Fantasy"
        android:textColor="#FF3466"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        />

    <TextView
        android:id="@+id/nameMain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:gravity="start"
        android:text="Avengers: End Game"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintEnd_toEndOf="@id/photo4"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:text="13+"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/nameMain"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"/>

    <TextView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="Back"
        android:textColor="#6D6D80"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/backButtonArrow"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/backButtonArrow"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:src="@drawable/arrow_left"
        android:background="@android:color/transparent"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>