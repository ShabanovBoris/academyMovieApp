<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">4dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4%</item>
    </style>



    <style name="SearchStyle" >
        <item name="android:background">@drawable/ic_edittext</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColorHint">@color/white_alpha_0.5</item>
        <item name="android:hint">Search</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:gravity">center|start</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="drawableTint">@color/white</item>
        <item name="drawableEndCompat">@drawable/ic_search</item>
    </style>

    <style name="MainProgressBar" parent="android:Widget.Material.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:alpha">0.5</item>
        <item name="android:scaleX">2</item>
        <item name="android:scaleY">2</item>
    </style>
</resources>